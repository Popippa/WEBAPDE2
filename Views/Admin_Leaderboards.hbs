<html>
    <head>
        <style>
            @font-face {
                font-family: "nintendo";
                src: url("/fonts/SNES-italic.woff");
            }
            
            
            html{
                background: url('movingcar.gif') no-repeat center center fixed;
                -webkit-background-size:cover;
                -moz-background-size:cover;
                -o-background-size:cover;
                background-size:cover;
                height:auto;
            }
            
            #NavBar{
                height: 60px;
                margin: 0 auto;
                display: block;
            }
            
            #Leaderboards{
                float: left;
                display: inline-block;
                margin: 0 auto;
            }
            #Leaderboards input[type = "submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;    
            }
            
            #Words{
                float: left;
                display: inline-block;
            }
            #Words input[type="submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
            }
            
            #Users{
                float: left;
                display: inline-block;
            }
            #Users input[type="submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
            }
            
            #User input[type="submit"]{
                font-family: "nintendo";
                background-color: red;
                outline: none;
                font-size: 15px;
                border-color: red;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
            }
            
            #Logout{
                float: right;
            }
            #Logout input[type= "submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
            }
            

            #DifficultyButton input[type = "button"]{
                font-family: "nintendo";
                font-size: 30px;
                padding : 20px 28px;
                opacity: 0.8;
            }
            #DifficultyButton input[type = "submit"]{
                font-family: "nintendo";
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 20px 28px;
            }
            
            #inputDiv{
                width:100%;
                text-align:right;
            }
            
            #AddWords input[type="text"]{
                outline: none;
                font-size: 18px;
                border-color: transparent;
                padding: 8px 19px;
                border-width: 2px;
                border-color: black;
            }
            
            #AddWords input[type = "button"]{
                background-color: Transparent;
                font-family: "nintendo";
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
                transition: all 0.5s;
                cursor: pointer;
            }
            
            #AddWords input[type="submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;   
            }
            
            #space{
                height: 30px;
            }
                
            #UserDashboard{
                display: block;
                width: 100%;
                overflow:auto;
            }
            
            #User input[type = "submit"]{
                font-family: "nintendo";
                outline: none;
                font-size: 30px;
                margin: 0 auto;
            }
            
            p1{
                font-family: "nintendo";
                font-size: 30px;
                font-weight: bolder;
                padding: 12px 28px;
                color: white;
            }
            
            th{
                font-family: "nintendo";
                color: white;
                padding: 5px;
                font-size: 40px;
                text-align: center;
                background-color:blue;
                
            }
            
            td{
                font-family: "nintendo";
                font-size: 25px;
                background-color:beige;
                text-align: center;
                
            }
            thead{
                width:100%;
            }
            tbody{
                height:400px;
                display:inline-block;
                overflow: auto;
            }
        </style>
        
        <script>
            function changeEasy(){
                const str2 = document.getElementById("difficulty")
                document.getElementById("easy").style.color = "green"
                document.getElementById("medium").style.color = "white"
                document.getElementById("hard").style.color = "white"
                
                str2.value = "EASY"
            }
            function changeMedium(){
                const str2 = document.getElementById("difficulty")
                document.getElementById("easy").style.color = "white"
                document.getElementById("medium").style.color = "yellow"
                document.getElementById("hard").style.color = "white"
                
                str2.value = "MEDIUM"
            }
            function changeHard(){
                const str2 = document.getElementById("difficulty")
                document.getElementById("easy").style.color = "white"
                document.getElementById("medium").style.color = "white"
                document.getElementById("hard").style.color = "red"
                
                str2.value = "HARD"
            }
        </script>
    
    </head>
    <body>
        <div id="NavBar">
            <img src="Logo2.png" style="height:100%;text-align: center; display: inline-block;float: left;">
            
            <form id="Leaderboards" method="post" action="admin_Leaderboards" >
                <input type="submit" value="Leaderboards" id="leaderboardButton" style="color:red">
            </form>
            
            <form id="Users" method="post" action="admin_Users">
                <input type="submit" value="Users">
            </form>
            
            <form id="Words" method="post" action="admin_Words">
                <input type="submit" value="Words">
            </form>
            
            <form id="Logout" action="logout" method="post">
                <p1>Logged in as: {{us}}</p1>
                <input type="submit" value="Logout">
            </form>
        </div>
            
        <div id="space"></div>
        
        <div id="UserDashboard">
                <table style="text-align: center; width: 100%;" id="leaderboardTable">
                        <tbody>
                            <tr>
                                <th >Tier</th>
                                <th >Player Name</th>
                                <th >Score</th>
                                <th >Action</th>
                            </tr>
                            {{#each data}}
                            <tr>
                                <td>{{difficulty}}</td>
                                <td>{{playerusername}}</td>
                                <td>{{score}}</td>
                                <td>
                                    <form id="User" action="deleteLeaderboards" method="post" style="display:inline">
                                        <input type="hidden" name="difficulty_Del" id="us_Del" value="{{difficulty}}">
                                        <input type="hidden" name="playername_Del" id="playername_Del" value="{{playerusername}}">
                                        <input type="hidden" name="score_Del" id="score_Del" value="{{score}}">
                                        <input type="submit" value="Delete">
                                    </form>
                                </td>
                            </tr> 
                            {{/each}}
                        </tbody>
                    </table>    
                <br>
        </div>
    </body>
</html>