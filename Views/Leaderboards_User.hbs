<html>
    <head>
        <style>
            @font-face {
                font-family: "nintendo";
                src: url("/fonts/SNES-italic.woff");
            }
            
            
            html{
                background: url('movingcar.gif') no-repeat center center fixed;
                -webkit-background-size:cover;
                -moz-background-size:cover;
                -o-background-size:cover;
                background-size:cover;
                height:auto;
            }
            
            #NavBar{
                height: 60px;
                margin: 0 auto;
                display: block;
            }
            
        
            #BackToMain{
                float: left;
                display: inline-block;
                margin: 0 auto;
            }
            #BackToMain input[type = "submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;    
            }
            
            #BonusMode{
                float: left;
                display: inline-block;
            }
            #BonusMode input[type="submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
            }
            
             #FilterButtons input[type="button"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
            }
            
            #FilterButtons input[type="submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
            }
            
            #Logout{
                float: right;
            }
            #Logout input[type= "submit"]{
                font-family: "nintendo";
                background-color: Transparent;
                outline: none;
                font-size: 30px;
                border-color: transparent;
                font-weight: bold;
                padding: 12px 28px;
                color: white;
            }
            
            
            #space{
                height: 30px;
            }
                
            #UserDashboard{
                display: block;
                width: 100%;
            }
            
            p1{
                font-family: "nintendo";
                font-size: 30px;
                font-weight: bolder;
                padding: 12px 28px;
                color: white;
            }
            
            th{
                font-family: "nintendo";
                color: white;
                padding: 5px;
                font-size: 40px;
                text-align: center;
                background-color:#1E50FA;
                
            }
            
            td{
                font-family: "nintendo";
                font-size: 25px;
                background-color:beige;
                text-align: center;
                
            }
        </style>
        
        <script>
            function Signup(){
                document.getElementById("selectLogin").style.display = "none"
                document.getElementById("Signup").style.display = "inline-block"
            }
            
            function Login(){
                document.getElementById("selectLogin").style.display = "none"
                document.getElementById("Login").style.display = "inline-block"
            }
            function returnBackSignup(){
                document.getElementById("selectLogin").style.display = "block"
                document.getElementById("Signup").style.display = "none"
            }
            function returnBackLogin(){
                document.getElementById("selectLogin").style.display = "block"
                document.getElementById("Login").style.display = "none"
            }
             function changeEasy(){
                const str2 = document.getElementById("difficultyfilter")
                document.getElementById("easy").style.color = "green"
                document.getElementById("medium").style.color = "white"
                document.getElementById("hard").style.color = "white"
                
                str2.value = "EASY"
            }
            function changeMedium(){
                const str2 = document.getElementById("difficultyfilter")
                document.getElementById("easy").style.color = "white"
                document.getElementById("medium").style.color = "yellow"
                document.getElementById("hard").style.color = "white"
                
                str2.value = "MEDIUM"
            }
            function changeHard(){
                const str2 = document.getElementById("difficultyfilter")
                document.getElementById("easy").style.color = "white"
                document.getElementById("medium").style.color = "white"
                document.getElementById("hard").style.color = "red"
                
                str2.value = "HARD"
            }
        </script>
    
    </head>
    <body>
         <div id="NavBar">
             <img src="Logo2.png" style="height:100%;text-align: center; display: inline-block;float: left;">
             
            <form id="BackToMain" method="post" action="BackToMain">
                <input type="submit" value="Back To Main Page">
            </form>
            
            <form id="BonusMode" method="post" action="BonusMode">
                <input type="submit" value="Bonus Mode">
            </form>
            
            <form id="Logout" action="logout" method="post">
                <p1>Logged in as: {{us}}</p1>
                <input type="submit" value="Logout">
            </form>
        </div>
        
        <div id="space"></div>
        
        <form id="FilterButtons" style="text-align: center" action="ChangeFilter" method="post">
            <input type="button" id="easy" value="EASY" onclick="changeEasy()">
            <input type="button" id="medium" value="MEDIUM" onclick="changeMedium()">
            <input type="button" id="hard"  value="HARD" onclick="changeHard()">
            <input type="hidden" name="difficulty" id="difficultyfilter" value="">
            <input type="submit" value="Filter">
        </form>
            
        <div id="UserDashboard">
                <table style="text-align: center; width: 100%;" name="leaderboardTable">
                        <tbody>
                            <tr>
                                <th> Player Name</th>
                                <th> Difficulty</th>
                                <th> Score</th>
                            </tr>
                            
                            {{#each data}}
                            <tr>
                                <td>{{playerusername}}</td>
                                <td>{{difficulty}}</td>
                                <td>{{score}}</td>
                            </tr>
                            {{/each}}
                            
                        </tbody>
                    </table>    
                <br>
        </div>
    </body>
</html>